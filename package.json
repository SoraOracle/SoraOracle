{
  "name": "@sora-oracle/sdk",
  "version": "5.0.0",
  "description": "Permissionless Oracle SDK with s402 Micropayments on BNB Chain",
  "main": "index.js",
  "scripts": {
    "build": "cd frontend && npm install && npm run build",
    "start": "cd frontend && npm run start",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:testnet": "hardhat run scripts/deploy-sora.js --network bscTestnet",
    "deploy:mainnet": "hardhat run scripts/deploy-mainnet.js --network bscMainnet",
    "check:mainnet": "hardhat run scripts/check-mainnet-config.js --network bscMainnet",
    "sora:ask": "hardhat run scripts/sora-ask.js --network bscTestnet",
    "sora:answer": "hardhat run scripts/sora-answer.js --network bscTestnet",
    "sora:withdraw": "hardhat run scripts/sora-withdraw.js --network bscTestnet",
    "sora:prices": "hardhat run scripts/get-prices.js --network bscTestnet",
    "sora:auto-update": "hardhat run scripts/auto-update-twap.js --network bscTestnet",
    "mainnet:ask": "hardhat run scripts/sora-ask.js --network bscMainnet",
    "mainnet:answer": "hardhat run scripts/sora-answer.js --network bscMainnet",
    "mainnet:withdraw": "hardhat run scripts/sora-withdraw.js --network bscMainnet",
    "mainnet:prices": "hardhat run scripts/get-prices.js --network bscMainnet",
    "mainnet:auto-update": "hardhat run scripts/auto-update-twap.js --network bscMainnet",
    "ai:test": "node scripts/ai-oracle-settler.js",
    "ai:settle": "node scripts/ai-oracle-settler.js",
    "ai:monitor": "node scripts/ai-market-monitor.js",
    "ai:monitor:continuous": "node scripts/ai-market-monitor.js --continuous",
    "s402:deploy:mainnet": "hardhat run scripts/deploy-s402-mainnet.js --network bscMainnet",
    "s402:deploy:testnet": "hardhat run scripts/deploy-s402.js --network bscTestnet",
    "s402:checklist": "node scripts/pre-deployment-checklist.js",
    "s402:fund-workers": "node scripts/fund-workers.js",
    "s402:check-balances": "node scripts/check-worker-balances.js",
    "db:push": "drizzle-kit push",
    "db:push:force": "drizzle-kit push --force"
  },
  "keywords": [
    "oracle",
    "prediction-markets",
    "bnb-chain",
    "bsc",
    "smart-contract",
    "solidity",
    "s402",
    "micropayments",
    "usdc",
    "permissionless",
    "ai-oracle",
    "eip-2612"
  ],
  "author": "Sora Oracle <soraoracle@proton.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sora-oracle/sora-oracle-sdk"
  },
  "dependencies": {
    "@1inch/embedded-widget": "^0.0.2",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "hardhat": "^2.22.18",
    "ipfs-http-client": "^60.0.1",
    "node-fetch": "^3.3.2",
    "openai": "^6.6.0",
    "pg": "^8.16.3",
    "recharts": "^3.3.0",
    "viem": "^2.38.4",
    "x402-express": "^0.6.5"
  }
}
